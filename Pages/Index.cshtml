@page
@using System.Globalization
@using MyRazorApp.Pages
@model MyRazorApp.Pages.Index


<!DOCTYPE html>

<html>
    <header>
        <title></title>
    </header>

    <body>
    <div>
        
        <ul>
            <li>
                <a href="~/">Home</a>
            </li>
            
            <li>
                <a href="~/about">Sobre</a>
            </li>
            
            <li>
                <a href="~/login">Login</a>
            </li>
        </ul>

        <h1>Categorias</h1>

        <table>
            <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Price</td>
            </tr>
            </thead>

            <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Title</td>
                    <td>@category.Price.ToString("C", new CultureInfo("pt-BR"))</td>
                </tr>
            }
            </tbody>
        </table>

    </div>
    </body>
</html>

